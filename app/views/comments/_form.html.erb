<br>
<div class="container">
   <div class=" text-center card">   
  <%= simple_form_for([@food, @food.comments.build]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :your_name %>
      <%= f.input :note %>
      <%= f.association :food%>
    </div>

  <div class="form-actions button btn-success">
    <%= f.button :submit %>
  </div>

  <% end %>
  </div>
</div>

