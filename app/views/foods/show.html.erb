<br/>
<br/>
	<div class="card" style="width: 75rem; height:85em;">
		<center>
			<h4 class="card-title font-weight-bold"><%= @food.title %></h5>
		</center>
	  <img class="card-img-top" src=<%= @food.avatar.url %> alt="Card image cap">
	  <div class="card-body">
	    

	    <div class="container navbar-light bg-info">
		  <div class="row">
		    <div class="col-md">
		      Prep Time :<%= @food.prep_time %>
		    </div>
		    <div class="col-md">
		      Cook Time : <%= @food.cook_time %>
		    </div>
		    <div class="col-md">
		      Level of Difficulty:  <%= @food.level_of_difficulty %> 
		    </div>
		    <div class="col-md">
		      Serving Time : <%= @food.serving_time %> 
		    </div>
		  </div>
		</div>

		<div class="container box">
		  <div class="row">
		    <div class="col-sm">
		    	<div class="text-center">
		    		<h5 class="font-weight-bold"> Ingredients </h5> <br> 
		    	</div>
		    	<ul>
		    		<p class="text-left"><%= markdown(@food.ingredients) %></p>
		    	</ul>
		    </div>
		    <div class="col-md"> 
		    	<div class="text-center">
		    		<h5 class="font-weight-bold">Repice </h5> <br> 
		    	</div>
		    	<ul>
		    		<p class="text-left"><%= markdown(@food.repice) %></p>
		    	</ul>	      
		    </div>
		  </div>
		</div>
	  </div>
	</div>

<center>
	<%= link_to 'Edit', edit_food_path(@food), :class => "btn btn-light" %> |
	<%= link_to 'Back', foods_path, :class => "btn btn-light" %>	
</center>


